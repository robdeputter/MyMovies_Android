<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchCardView"
            android:layout_width="@dimen/width_card_dashboard_landscape"
            android:layout_height="@dimen/height_card_dashboard"
            android:layout_margin="8dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="@dimen/matCardRadius"
            app:cardElevation="@dimen/cardElevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/searchImg_dashboard"
                    android:layout_width="@dimen/image_width_dashboard"
                    android:layout_height="@dimen/image_height_dashboard"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_empty" />

                <TextView
                    android:id="@+id/searchTxt_dashboard"
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:text="@string/searchtext_dashboard"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_dashboard" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/favoritesCardView"
            android:layout_width="@dimen/width_card_dashboard_landscape"
            android:layout_height="@dimen/height_card_dashboard"
            android:layout_margin="8dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="@dimen/matCardRadius"
            app:cardElevation="@dimen/cardElevation"
            app:layout_constraintTop_toBottomOf="@+id/searchCardView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/favoritesImg_dashboard"
                    android:layout_width="@dimen/image_width_dashboard"
                    android:layout_height="@dimen/image_height_dashboard"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/favoritesTxt_dashboard"
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:text="@string/favoritestext_dashboard"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_dashboard"
                    app:layout_constraintEnd_toEndOf="@+id/favoritesImg_dashboard"
                    app:layout_constraintStart_toStartOf="@+id/favoritesImg_dashboard"
                    app:layout_constraintTop_toBottomOf="@+id/favoritesImg_dashboard" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/newReleasesCardView"
            android:layout_width="@dimen/width_card_dashboard_landscape"
            android:layout_height="@dimen/height_card_dashboard"
            android:layout_margin="8dp"
            app:cardCornerRadius="@dimen/matCardRadius"
            app:cardElevation="@dimen/cardElevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/newReleasesImg_dashboard"
                    android:layout_width="@dimen/image_width_dashboard"
                    android:layout_height="@dimen/image_height_dashboard"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_new_release" />

                <TextView
                    android:id="@+id/newReleasesTxt_dashboard"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/newReleasestext_dashboard"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_dashboard" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>






    </LinearLayout>
</layout>

